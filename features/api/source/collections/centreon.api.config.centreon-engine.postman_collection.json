    "name": "List resource CFG",
    "event": [{
      "listen": "test",
      "script": {
        "type": "text\/javascript",
        "exec": ["var jsonData = JSON.parse(responseBody);",
          "var rcfgData = jsonData.result;",
          "",
          "try {",
          "    tests[\"Body contains list of resources CFG\"] = rcfgData;",
          "    var i = 0;",
          "    var rcfgname = \"$\"+ postman.getEnvironmentVariable(\"rcfg_name\") + \"$\";",
          "    while (i < rcfgData.length) {",
          "        if (rcfgname == rcfgData[i].name) {",
          "            tests[\"Body contains added resource CFG\"] = rcfgname == rcfgData[i].name;",
          "            tests[\"Body contains added rcfg_value\"] = postman.getEnvironmentVariable(\"rcfg_value\") == rcfgData[i].value;",
          "            tests[\"Body contains added rcfg_comment\"] = postman.getEnvironmentVariable(\"rcfg_comment\") == rcfgData[i].comment;",
          "            tests[\"Body contains added rcfg_activate\"] = postman.getEnvironmentVariable(\"rcfg_activate\") == rcfgData[i].activate;",
          "            tests[\"Body contains added rcfg_instance\"] = postman.getEnvironmentVariable(\"rcfg_instance\") == rcfgData[i].instance;",
          "            break;",
          "        }",
          "        i++;",
          "    }",
          "    if (i == rcfgData.length)",
          "        tests[\"rcfg_name was found\"] = false;",
          "} catch (e) {}",
          "",
          "tests[\"Status code is 200\"] = responseCode.code === 200;"]
      }
    }],
