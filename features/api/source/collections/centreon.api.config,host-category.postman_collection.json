    "name": "Getmember",
    "event": [{
      "listen": "test",
      "script": {
        "type": "text\/javascript",
        "exec": ["var jsonData = JSON.parse(responseBody);",
          "var hc_member_Data = jsonData.result;",
          "",
          "try {",
          "    tests[\"Body contains list of host category members\"] = hc_member_Data;",
          "    var i = 0;",
          "    while (i < hc_member_Data.length) {",
          "        if (postman.getEnvironmentVariable(\"host_name\") == hc_member_Data[i].name)",
          "        {",
          "            tests[\"Body contains added host_name\"] = postman.getEnvironmentVariable(\"host_name\") == hc_member_Data[i].name;",
          "            break;",
          "        }",
          "        i++;",
          "    }",
          "    if (i == hc_member_Data.length)",
          "    {",
          "        tests[\"host_name was found\"] = false;",
          "    }",
          "}",
          "catch (e) {}",
          "",
          "tests[\"Status code is 200\"] = responseCode.code === 200;"]
      }
    }],
